{
  "name": "hydra",
  "description": "An Http client.",
  "version": "0.3.0",
  "license": "GPL-3.0-only",
  "author": "Joshua Kovalchik",
  "repository": "https://github.com/Kovee98/hydra",
  "private": true,
  "main": "src-electron/main-process/electron-main.js",
  "scripts": {
    "lint": "eslint --ext .js,.vue . --fix",
    "dev": "quasar dev -m electron",
    "start": "npm run dev",
    "release": "electron-builder",
    "test": "echo success"
  },
  "build": {
    "appId": "com.jkovalchik.hydra",
    "productName": "Hydra",
    "copyright": "Copyright Â© 2019 ${author}",
    "publish": "github",
    "win": {
      "icon": "src-electron/icons/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "shortcutName": "Hydra",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE.md",
      "installerIcon": "src-electron/icons/icon.ico",
      "artifactName": "hydra-setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools",
      "icon": "src-electron/icons/icon.icns"
    },
    "dmg": {
      "artifactName": "hydra-setup-${version}.${ext}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "executableName": "Hydra",
      "icon": "src-electron/icons/linux-512x512.png"
    },
    "appImage": {
      "artifactName": "hydra-${version}.${ext}",
      "category": "Development",
      "license": "LICENSE.md"
    }
  },
  "dependencies": {
    "@quasar/extras": "^1.3.3",
    "axios": "^0.18.1",
    "electron-window-state": "^5.0.3",
    "jsonfile": "^5.0.0",
    "quasar": "^1.5.2",
    "vue-codemirror": "^4.0.6",
    "vue-prism-editor": "^0.3.0",
    "vue-shortkey": "^3.1.7",
    "vuex-map-fields": "^1.3.6",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@quasar/app": "^1.3.1",
    "@quasar/quasar-app-extension-icon-genie": "^1.1.2",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "devtron": "^1.4.0",
    "electron": "^15.5.5",
    "electron-builder": "^21.2.0",
    "electron-debug": "^3.0.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^5.10.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.0.0"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.6.0"
  },
  "browserslist": [
    "last 1 version, not dead, ie >= 11"
  ]
}
