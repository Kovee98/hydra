{
  "name": "hydra",
  "version": "0.2.1",
  "description": "An Http client.",
  "author": "Joshua Kovalchik",
  "private": true,
  "main": "src-electron/main-process/electron-main.js",
  "scripts": {
    "lint": "eslint --ext .js,.vue . --fix",
    "test": "echo \"No test specified\" && exit 0",
    "dev": "quasar dev -m electron",
    "start": "npm run dev",
    "dist": "npm run build"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "build": {
    "appId": "com.jkovalchik.Hydra",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@quasar/extras": "^1.3.3",
    "axios": "^0.18.1",
    "electron-window-state": "^5.0.3",
    "jsonfile": "^5.0.0",
    "quasar": "^1.5.2",
    "vue-codemirror": "^4.0.6",
    "vue-prism-editor": "^0.3.0",
    "vue-shortkey": "^3.1.7",
    "vuex-map-fields": "^1.3.6"
  },
  "devDependencies": {
    "@electron-forge/maker-dmg": "^6.0.0-beta.47",
    "@electron-forge/maker-zip": "^6.0.0-beta.47",
    "@quasar/app": "^1.3.1",
    "@quasar/quasar-app-extension-icon-genie": "^1.1.2",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "devtron": "^1.4.0",
    "electron": "^5.0.0",
    "electron-builder": "^21.2.0",
    "electron-debug": "^3.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-forge": "^5.2.4",
    "electron-packager": "^14.1.1",
    "eslint": "^5.10.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "gulp": "^4.0.2",
    "gulp-zip": "^5.0.1"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.6.0",
    "yarn": ">= 1.6.0"
  },
  "browserslist": [
    "last 1 version, not dead, ie >= 11"
  ]
}
